---
import BaseLayout from '@src/layouts/BaseLayout.astro';
import ContactForm from '@src/components/ContactForm';
import Prose from '@src/components/Prose.astro';
import { useContentTranslations } from '@src/i18n/translations';

const lang = 'en';
const tc = useContentTranslations(lang);
---

<BaseLayout
	title={tc('contact.title')}
	description={tc('contact.description')}
	lang={lang}
>
  <div class='container'>
    <main class='prose text-lg dark:prose-invert'>
      <article>
        <div class='mb-10'>
          <h1 class="text-4xl font-bold mb-6">{tc('contact.title')}</h1>
          <Prose>
            <div class="text-lg">
              <p class="mb-6">
                {tc('contact.intro.p1')}
              </p>
              <p class="mb-8">
                {tc('contact.intro.p2')}
              </p>
            </div>
          </Prose>
        </div>

        <!-- Alternative contact information -->
        <div class="mb-12 grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-gray-50 dark:bg-zinc-800 p-6 rounded-lg">
            <h3 class="text-xl font-semibold mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              {tc('contact.email.title')}
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              {tc('contact.email.text')}
            </p>
            <a href="mailto:kevin@kobouharriet.site" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium">
              kevin@kobouharriet.site
            </a>
          </div>

          <div class="bg-gray-50 dark:bg-zinc-800 p-6 rounded-lg">
            <h3 class="text-xl font-semibold mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              {tc('contact.responseTime.title')}
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              {tc('contact.responseTime.text')}
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-500 mt-2">
              {tc('contact.responseTime.urgent')}
            </p>
          </div>
        </div>

        <!-- Contact form -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold mb-8">{tc('contact.form.title')}</h2>
          <ContactForm client:load />
        </div>

        <!-- Additional information -->
        <div class="border-t border-gray-200 dark:border-zinc-700 pt-8">
          <h3 class="text-2xl font-bold mb-4">{tc('contact.help.title')}</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <ul class="space-y-2">
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {tc('contact.help.cloud')}
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {tc('contact.help.kubernetes')}
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {tc('contact.help.cicd')}
              </li>
            </ul>
            <ul class="space-y-2">
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {tc('contact.help.apis')}
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {tc('contact.help.consulting')}
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {tc('contact.help.mentoring')}
              </li>
            </ul>
          </div>
        </div>
      </article>
    </main>
  </div>
</BaseLayout>
